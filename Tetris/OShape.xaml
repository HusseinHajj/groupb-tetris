<UserControl x:Class="Tetris.OShape"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="40" Width="40">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle Grid.Column="0" Grid.Row="0" Fill="Yellow" Stroke="Black" />
        <Rectangle Grid.Column="1" Grid.Row="0" Fill="Yellow" Stroke="Black" />
        <Rectangle Grid.Column="1" Grid.Row="1" Fill="Yellow" Stroke="Black" />
        <Rectangle Grid.Column="0" Grid.Row="1" Fill="Yellow" Stroke="Black" />
    </Grid>
</UserControl>
