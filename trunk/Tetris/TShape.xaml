<UserControl x:Class="Tetris.TShape"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="40" Width="60">
    <Grid x:Name="GridRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle Grid.Column="0" Grid.Row="1" Stroke="Black" Fill="Violet" />
        <Rectangle Grid.Column="1" Grid.Row="1" Stroke="Black" Fill="Violet" />
        <Rectangle Grid.Column="1" Grid.Row="0" Stroke="Black" Fill="Violet" />
        <Rectangle Grid.Column="2" Grid.Row="1" Stroke="Black" Fill="Violet" />
    </Grid>
</UserControl>
