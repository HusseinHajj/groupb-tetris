<UserControl x:Class="Tetris.LShape"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="60" Width="40">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Rectangle Fill="Orange"  Stroke="Black" />
        <Rectangle Grid.Column="1" Grid.Row="2" Fill="Orange"  Stroke="Black" />
        <Rectangle Grid.Column="0" Grid.Row="2" Fill="Orange"  Stroke="Black" />
        <Rectangle Grid.Column="0" Grid.Row="1" Fill="Orange"  Stroke="Black" />
    </Grid>
</UserControl>
