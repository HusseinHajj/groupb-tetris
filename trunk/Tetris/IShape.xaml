<UserControl x:Class="Tetris.IShape"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="80" Width="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Rectangle Fill="Cyan" Stroke="Black" />
        <Rectangle Grid.Row="1" Fill="Cyan" Stroke="Black" />
        <Rectangle Grid.Row="2" Fill="Cyan" Stroke="Black" />
        <Rectangle Grid.Row="3" Fill="Cyan" Stroke="Black" />
    </Grid>
</UserControl>
